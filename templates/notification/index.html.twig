{% extends 'base.html.twig' %}

{% block title %}Mes Notifications{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Mes Notifications</h1>
    <ul class="list-group list-group-flush">
        {% for payment in payments %}
            <li class="list-group-item border-0 d-flex justify-content-between align-items-center p-3">
                <div class="d-flex flex-column">
                    <span>
                        {% if payment.status == 'succeeded' %}
                            Votre paiement pour l'événement "{{ payment.event.titre }}" a été réussi.
                        {% elseif payment.status == 'failed' %}
                            Votre paiement pour l'événement "{{ payment.event.titre }}" a échoué.
                        {% else %}
                            Le statut de votre paiement pour l'événement "{{ payment.event.titre }}" est : {{ payment.status }}.
                        {% endif %}
                    </span>
                    <small class="text-muted">{{ payment.createdAt|date('d-m-Y H:i', 'Europe/Paris') }}</small>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
