{% extends 'base.html.twig' %}

{% block title %}Payment Successful{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h1 class="card-title">Payment Successful</h1>
        </div>
        <div class="card-body">
            <p class="card-text">Thank you for your payment for the event <strong>{{ event.titre }}</strong>.</p>
            <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-primary">Back to Event</a>
        </div>
    </div>
</div>
{% endblock %}
